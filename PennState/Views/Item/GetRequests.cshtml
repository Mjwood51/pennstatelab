@model PennState.ViewModels.RequestViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="@Url.Content("~/Scripts/tablesorter/themes/blue/style.css")" />

<div class="page-init">
    <div id="requestBoxId" class="requestBox">
        <table id="requestTable" class="tablesorter table-hover table-striped">
            <thead>
                <tr>
                    <th style="font-size:134%;width:10%">
                        Item Name
                    </th>
                    <th style="font-size:134%;width:4%">
                        Qty
                    </th>
                    <th style="font-size:134%;width:5%">
                        Unit Price
                    </th>
                    <th style="font-size:134%;width:19%">
                        Message
                    </th>
                    <th style="font-size:14px;width:9%">
                        User
                    </th>
                    <th style="font-size:134%;width:4%">
                        Total Price
                    </th>
                    <th style="font-size:134%;width:15%"></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Requests != null)
                {
                    foreach (var item in Model.Requests)
                    {
                <tr id="rowReq_@item.Id" style="height:50px">
                    <td style="font-size:134%;width:10%">
                        @Html.DisplayFor(modelItem => item.ItemName)
                    </td>
                    <td style="font-size:134%;width:4%;text-align:left">
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td style="font-size:134%;width:5%;text-align:left">
                        @Html.DisplayFor(modelItem => item.UnitPrice)
                    </td>
                    <td style="font-size:134%;width:10%;text-align:left">
                        @Html.DisplayFor(modelItem => item.Message)
                    </td>
                    <td style="font-size:134%;width:15%;text-align:right">
                        @Html.DisplayFor(modelItem => item.User.FirstName) @Html.DisplayFor(modelItem => item.User.LastName)
                    </td>
                    <td style="font-size:134%;width:8%;text-align:center">
                        @Html.DisplayFor(modelItem => item.TotalPrice)
                    </td>
                    @if (HttpContext.Current.User.IsInRole("Admin"))
                    {
                    <td style="font-size:134%;width:15%;text-align:left">
                        <a href="#" onclick="deleteRequest(@item.Id)">Delete</a>
                    </td>
                    }
                    else
                    {
                        <td style="font-size:134%;width:18%">

                        </td>
                    }
                </tr>
                    }

                }
                else
                {
                    if (TempData["SM"] != null)
                    {
                        <tr>
                            <th>
                                <div class="alert alert-primary">
                                    @TempData["SM"]
                                </div>
                            </th>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    <div class="parent-sidebar">
        <div class="sidebar">
        </div>
    </div>
    <div class="parent-sidebar">
        <div class="rightbar">
        </div>
    </div>
</div>
        @section Scripts{
            <script src="~/Scripts/tablesorter/jquery.tablesorter.min.js"></script>
            <script>
                $(document).ready(function () {
                    $("#requestTable").tablesorter({ sortList: [[0, 0], [2, 1]] });
                });

                function deleteRequest(id) {
                    $.ajax({
                        url: "/Item/DeleteRequest/" + id,
                        async: false,
                        beforeSend: function() {
                            return confirm("Are you sure you want to delete this request?");
                        }
                    }).done(function (data) {
                        $("#rowReq_" + id).remove();
                        $.notify("Request Deleted", {
                            style: 'happygreen'
                        });
                    })

                }
            </script>
        }
